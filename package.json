{
  "name": "komapi-passport",
  "version": "0.4.1",
  "description": "komapi-passport is the recommended authentication module for Komapi and provides a higher performing alternative to koa-passport",
  "author": "ersims",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/komapijs/komapi-passport.git"
  },
  "keywords": [
    "komapi",
    "koa",
    "passport"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/komapijs/komapi-passport/issues"
  },
  "homepage": "https://github.com/komapijs/komapi-passport#README.md",
  "engines": {
    "node": ">= 8.11.3",
    "npm": ">= 5.6.0"
  },
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "scripts": {
    "apply:format": "prettier --config .prettierrc --write \"{src,test,types}/**/*.{ts,js}?(x)\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "check:format": "prettier --config .prettierrc --list-different \"{src,test,types}/**/*.{ts,js}?(x)\"",
    "check:linting": "tslint --project tsconfig.json \"{src,test,types}/**/*.{ts,js}?(x)\"",
    "check:types": "tsc --noEmit",
    "check": "npm-run-all check:*",
    "clean": "del-cli ./.coverage ./dist",
    "pretest": "npm run check",
    "prepare": "npm run build",
    "release": "echo Recommended semver version bump: && conventional-recommended-bump -p angular && np",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "@types/boom": "^7.2.0",
    "@types/koa": "^2.0.46",
    "@types/passport": "^0.4.6",
    "boom": "^7.2.0",
    "delegates": "^1.0.0",
    "passport": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/node": "^8.10.24",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-http": "^0.3.6",
    "@types/passport-local": "^1.0.33",
    "@types/passport-oauth2": "^1.4.5",
    "@types/supertest": "^2.0.4",
    "conventional-changelog-cli": "2.0.11",
    "conventional-recommended-bump": "4.0.4",
    "del-cli": "^1.1.0",
    "husky": "1.1.4",
    "jest": "^23.5.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.1",
    "np": "3.0.4",
    "npm-run-all": "^4.1.3",
    "passport-anonymous": "^1.0.1",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.3.0",
    "prettier": "^1.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "23.0.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^3.0.3"
  },
  "files": [
    "src",
    "dist"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "bail": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}?(x)"
    ],
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/__tests__/**/*.{ts,js}?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "silent": true,
    "verbose": true
  }
}
