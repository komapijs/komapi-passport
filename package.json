{
  "name": "komapi-passport",
  "version": "0.1.0",
  "description": "komapi-passport is the recommended authentication module for Komapi",
  "author": "ersims",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/komapijs/komapi-passport.git"
  },
  "keywords": [
    "komapi",
    "koa",
    "passport"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/komapijs/komapi-passport/issues"
  },
  "homepage": "https://github.com/komapijs/komapi-passport#README.md",
  "engines": {
    "node": ">= 6.9.4",
    "npm": ">= 3.10.10"
  },
  "main": "index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "prebuild": "npm run clean --silent",
    "build": "babel -q -D -s true ./src/ --out-dir ./dist/",
    "clean": "del-cli ./dist ./coverage ./.nyc_output",
    "coverage": "nyc report --reporter=text --reporter=text-summary --reporter=html && nyc check-coverage --lines=100 --functions=100 --branches=100 --statements=100",
    "lint": "eslint index.js src/ test/",
    "pretest": "npm run clean --silent && npm run lint --silent",
    "test": "nyc --reporter=lcov ava",
    "posttest": "npm run coverage --silent",
    "prepublish": "npm run build",
    "watch": "ava --watch --serial"
  },
  "dependencies": {
    "boom": "^4.0.0",
    "delegates": "^1.0.0",
    "passport": "^0.3.2"
  },
  "devDependencies": {
    "ava": "^0.18.0",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.11.5",
    "babel-register": "^6.18.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.3.0",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-security": "^1.2.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.0.1",
    "nyc": "^10.0.0",
    "passport-anonymous": "^1.0.1",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.3.0",
    "supertest": "^3.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "ava": {
    "timeout": "180s",
    "verbose": true,
    "failFast": true,
    "concurrency": 2,
    "require": [
      "babel-register"
    ]
  }
}
